// Write a code to read two numbers and pritn their sum

#include<stdio.h>
int main()
{
    int a,b;
    int result;
    printf("Enter the numbers:");
    scanf("%d%d",&a,&b);
    result=a+b;
    printf("result is %d + %d = %d",a,b,result);
    return 0;
}

// Write a code to read a character and print it back to the user

#include<stdio.h>
int main()
{
    char name;
    printf("enter the character :");
    scanf("%c",&name);
    printf("character : %c",name);
    return 0;
}

// Write a code to read a float and print it with 2 decimals

#include<stdio.h>
int main()
{
    float a;
    printf("Enter the value :");
    scanf("%f",&a);
    printf("Float value is : %.2f",a);
    return 0;
}
